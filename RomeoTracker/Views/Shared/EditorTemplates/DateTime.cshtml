@model DateTime?

@{

}

<input type="hidden"
       id="@Html.IdForModel()"
       name="@Html.NameForModel()"
       value="@((Model.HasValue) ? Model.Value.ToString() : "")" 
       />


<input type="text"
       name="@(ViewData.TemplateInfo.GetFullHtmlFieldId(""))_datepart"
       id="@(ViewData.TemplateInfo.GetFullHtmlFieldId(""))_datepart"
       value="@((Model.HasValue) ? Model.Value.ToString("yyyy-MM-dd") : "")"
       data-dojo-type="dijit/form/DateTextBox"
       required="true"
       onchange="UpdateDateTime('@Html.IdForModel()');" />

<input type="text"
       name="@(ViewData.TemplateInfo.GetFullHtmlFieldId(""))_timepart"
       id="@(ViewData.TemplateInfo.GetFullHtmlFieldId(""))_timepart"
       value="@((Model.HasValue) ? Model.Value.ToString("'T'HH:mm:ss") : "")"
       data-dojo-type="dijit/form/TimeTextBox"
       required="true"
       onchange="UpdateDateTime('@Html.IdForModel()');" />
